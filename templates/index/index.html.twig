{% extends 'base.html.twig' %}

{% block title %}Welcome to SportHub{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="bg-gradient-to-br from-blue-100 to-indigo-200 dark:from-gray-900 dark:to-indigo-900 min-h-screen">
    <div class="container mx-auto px-4 py-16">
        <!-- Hero Section -->
        <section class="text-center mb-20">
            <h1 class="text-5xl md:text-6xl font-bold mb-6 text-indigo-800 dark:text-indigo-300 animate__animated animate__fadeInDown">
                Welcome to SportHub
            </h1>
            <p class="text-xl md:text-2xl mb-8 text-gray-700 dark:text-gray-300 animate__animated animate__fadeInUp animate__delay-1s">
                Connect, Train, and Compete with the Best
            </p>
            <div class="flex justify-center space-x-4 animate__animated animate__fadeInUp animate__delay-2s">
                <a href="{{ path('app_event_index') }}" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-6 rounded-full transition duration-300 transform hover:scale-105">
                    Find Events
                </a>
                <a href="#" class="bg-white hover:bg-gray-100 text-indigo-600 font-bold py-3 px-6 rounded-full transition duration-300 transform hover:scale-105 dark:bg-gray-800 dark:text-indigo-300 dark:hover:bg-gray-700">
                    Create Course
                </a>
            </div>
        </section>

        <!-- Features Section -->
        <section class="grid md:grid-cols-3 gap-8 mb-20">
            <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg transform transition duration-500 hover:scale-105">
                <div class="text-indigo-600 dark:text-indigo-400 text-4xl mb-4">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <h3 class="text-xl font-semibold mb-2 text-gray-800 dark:text-gray-200">Organize Events</h3>
                <p class="text-gray-600 dark:text-gray-400">Create and manage sports events with ease.</p>
            </div>
            <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg transform transition duration-500 hover:scale-105">
                <div class="text-indigo-600 dark:text-indigo-400 text-4xl mb-4">
                    <i class="fas fa-chalkboard-teacher"></i>
                </div>
                <h3 class="text-xl font-semibold mb-2 text-gray-800 dark:text-gray-200">Private Courses</h3>
                <p class="text-gray-600 dark:text-gray-400">Offer exclusive training sessions to athletes.</p>
            </div>
            <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg transform transition duration-500 hover:scale-105">
                <div class="text-indigo-600 dark:text-indigo-400 text-4xl mb-4">
                    <i class="fas fa-ticket-alt"></i>
                </div>
                <h3 class="text-xl font-semibold mb-2 text-gray-800 dark:text-gray-200">Ticket Sales</h3>
                <p class="text-gray-600 dark:text-gray-400">Sell tickets for your sports events effortlessly.</p>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="text-center bg-indigo-600 dark:bg-indigo-800 text-white py-12 px-4 rounded-lg shadow-xl">
            <h2 class="text-3xl font-bold mb-4">Ready to elevate your sports career?</h2>
            <p class="text-xl mb-6">Join SportHub today and connect with top athletes and coaches!</p>
            <a href="#" class="bg-white text-indigo-600 hover:bg-indigo-100 font-bold py-3 px-8 rounded-full transition duration-300 transform hover:scale-105">
                Sign Up Now
            </a>
        </section>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}