{% extends 'base.html.twig' %}

{% block title %}Welcome to SportHub{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Parallax Scrolling */
        .parallax {
            background: url('/path/to/your/sports-image.jpg') no-repeat center center;
            background-size: cover;
            background-attachment: fixed;
            position: relative;
        }

        /* Custom SVG Animations */
        .icon-container {
            transition: transform 0.5s ease-in-out;
        }
        .icon-container:hover {
            transform: rotate(10deg) scale(1.1);
        }

        /* Bold Typography & Asymmetric Design */
        .asymmetry {
            position: relative;
            background-color: transparent;
            z-index: 2;
        }
        .asymmetry::before {
            content: '';
            position: absolute;
            width: 50vw;
            height: 100%;
            top: 0;
            left: 50%;
            transform: skewX(-10deg);
            background: rgba(255, 255, 255, 0.05);
            z-index: -1;
        }

        /* Enhanced Button Styles */
        .cta-button {
            background: linear-gradient(90deg, rgba(78, 117, 255, 1) 0%, rgba(125, 174, 255, 1) 100%);
            padding: 15px 40px;
            color: #fff;
            border-radius: 30px;
            font-size: 1.25rem;
            font-weight: bold;
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
        }
        .cta-button:hover {
            transform: translateY(-5px) scale(1.05);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.25);
        }

        /* Subtle Animations */
        .animate-on-scroll {
            opacity: 0;
            transform: translateY(30px);
            transition: opacity 1s ease, transform 1s ease;
        }
        .animate-on-scroll.visible {
            opacity: 1;
            transform: translateY(0);
        }
    </style>
{% endblock %}

{% block body %}
<div class="bg-gradient-to-br from-blue-50 to-indigo-200 dark:from-gray-900 dark:to-indigo-900 min-h-screen">
    <!-- Parallax Hero Section -->
    <div class="parallax h-screen flex items-center justify-center text-center relative z-10">
        <div class="container mx-auto px-4">
            <h1 class="text-6xl md:text-8xl font-bold text-white animate__animated animate__fadeInDown asymmetry">
                Elevate Your Game at SportHub
            </h1>
            <p class="text-xl md:text-3xl text-gray-200 mt-4 animate__animated animate__fadeInUp delay-1s">
                The ultimate platform for sports enthusiasts
            </p>
            <div class="mt-8 flex justify-center space-x-6 animate__animated animate__fadeInUp delay-2s">
                <a href="{{ path('app_event_index') }}" class="cta-button">
                    Find Events
                </a>
                <a href="{{ path('app_event_new') }}" class="cta-button">
                    Create a Course
                </a>
            </div>
        </div>
    </div>

    <!-- Features Section with Custom SVGs -->
    <section class="container mx-auto py-24 px-4 text-center grid md:grid-cols-3 gap-16">
        <div class="icon-container">
            <svg class="w-16 h-16 text-indigo-600 mb-4">
                <!-- Your custom sports icon SVG here -->
            </svg>
            <h3 class="text-3xl font-semibold text-gray-800 dark:text-gray-200 mb-2">Organize Events</h3>
            <p class="text-gray-600 dark:text-gray-400">Easily set up and manage your sports events.</p>
        </div>
        <div class="icon-container">
            <svg class="w-16 h-16 text-indigo-600 mb-4">
                <!-- Your custom SVG for courses -->
            </svg>
            <h3 class="text-3xl font-semibold text-gray-800 dark:text-gray-200 mb-2">Private Courses</h3>
            <p class="text-gray-600 dark:text-gray-400">Train with elite athletes and coaches.</p>
        </div>
        <div class="icon-container">
            <svg class="w-16 h-16 text-indigo-600 mb-4">
                <!-- Your custom ticketing SVG -->
            </svg>
            <h3 class="text-3xl font-semibold text-gray-800 dark:text-gray-200 mb-2">Sell Tickets</h3>
            <p class="text-gray-600 dark:text-gray-400">Sell or distribute event tickets effortlessly.</p>
        </div>
    </section>

    <!-- CTA Section with Subtle Animations -->
    <section class="bg-indigo-600 dark:bg-indigo-800 text-white py-24 relative text-center">
        <h2 class="text-4xl font-extrabold mb-6">Ready to Push Your Limits?</h2>
        <p class="text-xl mb-8">Join SportHub today and level up your sports career.</p>
        <a href="#" class="cta-button bg-white text-indigo-600 hover:bg-gray-200 dark:hover:bg-gray-900">
            Get Started
        </a>
    </section>
</div>

<script>
    // Scroll-triggered animations
    const elements = document.querySelectorAll('.animate-on-scroll');
    window.addEventListener('scroll', () => {
        elements.forEach((element) => {
            if (element.getBoundingClientRect().top < window.innerHeight) {
                element.classList.add('visible');
            }
        });
    });
</script>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
