<form method="post" action="{{ path('app_event_delete', {'id': event.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="inline-block">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
    <button type="submit" class="text-white bg-red-600 hover:bg-red-700 font-bold py-3 px-6 rounded-full transition duration-300 transform hover:scale-105">
        <i class="fas fa-trash-alt"></i> Delete
    </button>
</form>
