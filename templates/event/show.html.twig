{% extends 'base.html.twig' %}

{% block title %}{{ event.title }} | Event Details{% endblock %}

{% block body %}
<div class="bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-gray-900 dark:to-indigo-950 min-h-screen py-12">
    <div class="container mx-auto px-4 max-w-4xl">
        <!-- Event Banner with Title Overlay -->
        <div class="relative mb-8 rounded-xl overflow-hidden shadow-2xl">
            {% if event.picFileName %}
                <img src="{{ asset('uploads/events/' ~ event.picFileName) }}" alt="{{ event.title }}" class="w-full h-80 object-cover">
            {% else %}
                <div class="w-full h-80 bg-gray-300 dark:bg-gray-700 flex items-center justify-center text-gray-500">
                    <span class="text-2xl font-semibold">No image available</span>
                </div>
            {% endif %}
            <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center">
                <h1 class="text-4xl md:text-5xl font-bold text-white text-center px-4">{{ event.title }}</h1>
            </div>
        </div>

        <!-- Event Details Card -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-xl p-8 mb-8">
            <!-- Category -->
            <p class="text-sm text-indigo-600 dark:text-indigo-400 mb-4">
                <i class="fas fa-tag text-indigo-600 dark:text-indigo-400"></i>
                Category: {{ event.category.name }}
            </p>
            
            <!-- Description -->
            <p class="text-gray-600 dark:text-gray-300 text-lg mb-8">{{ event.description }}</p>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div>
                    <div class="flex items-center mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <div>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Start Date</p>
                            <p class="text-lg font-semibold text-gray-800 dark:text-gray-200">{{ event.startDate ? event.startDate|date('d M Y, H:i') : 'TBA' }}</p>
                        </div>
                    </div>
                    <div class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <div>
                            <p class="text-sm text-gray-500 dark:text-gray-400">End Date</p>
                            <p class="text-lg font-semibold text-gray-800 dark:text-gray-200">{{ event.endDate ? event.endDate|date('d M Y, H:i') : 'TBA' }}</p>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="flex items-center mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        <div>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Location</p>
                            <p class="text-lg font-semibold text-gray-800 dark:text-gray-200">
                                {% for city in event.cities %}
                                    {{ city.name }}{% if not loop.last %}, {% endif %}
                                {% endfor %}
                            </p>
                        </div>
                    </div>
                    <div class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
                        </svg>
                        <div>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Available Seats</p>
                            <p class="text-lg font-semibold text-gray-800 dark:text-gray-200">{{ event.availableSeats }}</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-8 text-center">
                <p class="text-2xl font-bold text-gray-800 dark:text-gray-200 mb-4">
                    {{ event.price == 0 ? 'FREE' : event.price ~ ' â‚¬' }}
                </p>
                <a href="#" class="inline-block text-xl font-bold text-white bg-indigo-600 hover:bg-indigo-700 py-4 px-8 rounded-full transition duration-300 transform hover:scale-105 hover:shadow-lg">
                    Book Now
                </a>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-4">
            <a href="{{ path('app_event_index') }}" class="text-indigo-600 bg-white hover:bg-indigo-50 font-semibold py-3 px-6 rounded-full transition duration-300 transform hover:scale-105 shadow-md flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Back to List
            </a>
            <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="text-white bg-green-600 hover:bg-green-700 font-semibold py-3 px-6 rounded-full transition duration-300 transform hover:scale-105 shadow-md flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                </svg>
                Edit Event
            </a>
            {{ include('event/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
